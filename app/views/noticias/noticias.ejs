<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />
	<title>Notícias</title>

	<style>
		table {
			width: 600px;
			background-color: rgb(190, 37, 37);
			color: #fff;
			}
					
	</style>
</head>

<body style="background-color:#eee">

	<h1>Notícias</h1>

	<table>

		<tr>
			<td>Id</td>
			<td>Titulo</td>
			<td>Noticias</td>
		</tr>

		<% for(var i=0; i < noticias.length; i++) { %>
			<tr>
				<td>
					<%= noticias[i].id_noticia %>
				</td>
				<td>
					<%= noticias[i].titulo %>
				</td>
				<td>
					<%= noticias[i].noticia %>
				</td>
			</tr>
			<% } %>

	</table>

</body>

</html>